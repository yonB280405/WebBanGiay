@model IEnumerable<SneakerStore.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THƯƠNG HIỆU</h2>

<p>@Html.ActionLink("Tạo mới", "Create")</p>
@using (Html.BeginForm("Index", "Categories", FormMethod.Get))
{
    <input type="text" name="_name" />
    <input type="submit" value="Tìm kiếm" />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDCate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameCate)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDCate}) |
                @Html.ActionLink("Xóa", "Delete", new {id = item.IDCate })
            </td>
                </tr>
        }
    </table>
}