@model IEnumerable<SneakerStore.Models.Category>

<style>
    #div-u {
        margin-top: 10px;
        text-decoration: none;
        padding-left:0;
    }

    .div-cate {
        height: 30px;
        width: 100%;
        padding-left:20px;
    }

    a {
        color: black;
        text-decoration: none;
        font-size: 15px;
    }

        a:hover {
            text-decoration: none;
            color: black;
        }
</style>
<ul style="list-style-type:none" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.NameCate, "Index", "Product", new { category = item.IDCate.ToString().Trim() }, "")
            </li>
        }
    }
</ul>

