<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
        }

        #header-item {
            background-color: white;
            height: 85px;
            width: 100%;
        }

        #header-item-list {
            padding-top: 25px;
        }

        .link-item {
            color: #ee4d2d;
            text-decoration: none;
            font-size: 1.5rem;
            margin-left: 190px;
        }

            .link-item:hover {
                text-decoration: none;
                color: #ee4d2d;
            }

        #div-footer {
            position: fixed;
            text-align: center;
            bottom: 0;
            left: 0;
            padding-top: 15px;
            height: 50px;
            width: 100%;
            background-color: #f5f5f5;
        }

        #header-name {
            font-size: 30px;
            color: white;
            font-family: Quicksand;
            word-spacing: 5px;
        }

            #header-name:hover {
                color: #ee4d2d;
                text-decoration: none;
            }

        #header-title {
            font-size: 30px;
            font-family: Quicksand;
            word-spacing: 5px;
            font-weight: 100;
            margin-left: 20px;
        }

        .body-content {
            height: 600px;
            padding-left: 630px;
            padding-top: 45px;
            background-color: #ee4d2d;
        }

        .size_img {
            height: 200px;
            width: 200px;
            text-align: left;
            border-radius: 10px;
        }
        }
    </style>
</head>
<body>
    <div id="header-item">
        <div id="header-item-list">
            <span id="header-name">@Html.ActionLink("DOGBEE SHOP", "Index", "Product", null, new { @class = "link-item" })</span>
            <spam id="header-title">
                @if (ViewBag.Title == "LoginCus")
                {
                    <span> Đăng nhập</span>
                }
                else
                {
                    <span> Đăng kí</span>
                }
            </spam>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    <div id="div-footer">
        <p>&copy; @DateTime.Now.Year - DOGBEE STORE - HUFLIT</p>
    </div>
</body>
</html>
