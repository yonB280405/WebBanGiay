        }
    </style>
    <body>
        <div>
            @if (Session["NameUser"] == null)
            {

            }
            else
            {
                string tmp = (string)Session["RoleUser"];

                if (tmp == "Admin")
                {
                    <nav>
                        <div id="vtr-nav">
                            <ul id="ul-nav">
                                <li><a href="~/Product/Pro">Quản lí sản phẩm</a></li>
