@*@model IEnumerable<SneakerStore.Models.Product>*@
@using SneakerStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Product>
@{
    ViewBag.Title = "Index";
}

<style>
    #div-ds {
        text-align: center;
        background-color: #f5f5f5;  
        height: 50px;
        border-radius: 20px 20px 0 0;

    }

    .MenuPage li {
        display: inline;
    }

    #btnItems:hover {
        text-decoration: none;
        background-color: #f23f2b;
        color: white;
    }

    .body-selection {
        text-decoration: none;
        background-color: #ededed;
        margin-top: 20px;
        list-style-type: none;
        padding: 10px;
        font-size: 17px;
        width:1000px;
    }

    #btnItems {
        margin-right: 600px;
    }
    .container{
        width:1000px;
    }

    .pro {
        height:270px;
        width:230px;
        box-shadow: 0 0 1px 1px gray;
        background-color: white;
        border-radius:3px;
        text-align:center;
        margin-bottom:10px;
    }

        .pro:hover {
            cursor: pointer;
            border: 0.1rem unset #fc5e31;
        }
    .price {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 2rem;
        color: #ee4d2d;
        margin: 0;
    }
    .items-dong {
        font-size: 2rem;
        color: #ee4d2d;
        margin: 0;
    }
</style>


<h2>DANH SÁCH SẢN PHẨM</h2>
<div class="container">
    <div>
        <div class="body-selection">
            <div class="form-inline">
                <text>Sắp xếp theo</text>
                <a href="/OrderDetail/GroupByTop" class="btn btn-default ">Bán chạy </a>
                <a href="/Product/TopNew" class="btn btn-default " id="btnItems">Mới nhất</a>
                Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                <a href="/Product/DetailPro/@pro.ProductID">
                    <div class="card-pro">
                        <div class="pro">
                            <p></p>
                            <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                            <p>@Html.DisplayFor(model => pro.NamePro)</p>

                            <span class="price">@Html.DisplayFor(model => pro.Price)</span>
                            <span class="items-dong">₫</span>
                        </div>
                    </div>
                </a>

            </div>
        }
    </div>
</div>

<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>


