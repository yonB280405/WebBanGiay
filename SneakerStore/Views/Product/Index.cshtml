@using SneakerStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Product>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<style>

    #div-ds {
        text-align: center;
        background-color: #f5f5f5;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }



    #btnItems {
        margin-right: 600px;
    }

    .container {
        width: 1000px;
    }

    .body-selection {
        text-decoration: none;
        background-color: #ededed;
        margin-top: 20px;
        list-style-type: none;
        padding: 10px;
        font-size: 17px;
        width: 1000px;
        margin: 0 auto; /* Thêm vào đây */
        display: flex;
        justify-content: space-between;
        box-sizing: border-box;
    }

    #btnItems {
        margin-right: 10px;
        margin-left: 10px;
    }


    .pro {
        height: 270px;
        width: 230px;
        box-shadow: 0 0 1px 1px gray;
        background-color: white;
        border-radius: 3px;
        text-align: center;
        margin-bottom: 5px;
    }

        .pro:hover {
            cursor: pointer;
        }

    .body-selection {
        text-decoration: none;
        background-color: #ededed;
        margin-top: 20px;
        list-style-type: none;
        padding: 10px;
        font-size: 17px;
        width: 973px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        box-sizing: border-box;
    }

    .price {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 2rem;
        color: #ee4d2d;
        margin: 0;
    }

    .items-dong {
        font-size: 2rem;
        color: #ee4d2d;
        margin: 0;
    }

    .MenuPage {
        text-align: center;
        margin-top: 0;
        margin-right: 875px; /* căn trái */
        color: #ee4d2d; /* Màu chữ */
    }
</style>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/Testcss/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>
                        @{
                            if (!String.IsNullOrEmpty(ViewBag.SearchMessage))
                            {
                                <text>@ViewBag.SearchMessage</text>
                            }
                            else
                            {
                                <text>DANH SÁCH SẢN PHẨM</text>
                            }
                        }
                    </h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Trang Chủ</a>
                        <span>Sản Phẩm</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<div class="container">
    <div>
        <div class="body-selection">
            <div class="form-inline">
                <text>Sắp xếp theo</text>
                <a href="/OrderDetail/GroupByTop" class="btn btn-default" id="btnItems">Bán chạy </a>
                <a href="/Product/TopNew" class="btn btn-default " id="btnItems">Mới nhất</a>
                <div style="margin-left:50px; display:inline; margin-left:500px;">
                    Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                <a href="/Product/DetailPro/@pro.ProductID">
                    <div class="card-pro">
                        <div class="pro">
                            <p></p>
                            <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                            <p>
                                @{
                                    string limitedString = pro.NamePro.Length > 30 ? pro.NamePro.Substring(0, 30) + "..." : pro.NamePro;
                                }
                                @limitedString
                            </p>

                            <span class="price"> @String.Format("{0:0,0}", pro.Price)</span>
                            <span class="items-dong">₫</span>
                        </div>
                    </div>
                </a>

            </div>
        }
    </div>
</div>

<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>


